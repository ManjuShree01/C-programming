//malloc
#include <stdio.h>
#include <stdlib.h>
int main() {
    int n,i,*array,sum=0;
    //get length
    printf("Enter the number of elements:\n");
    scanf("%d",&n);
    //memory allocation
    array=(int *)malloc(n*sizeof(int));
    //validation
    if(array==NULL)
    {
        printf("Memory is not allocated.\n");
        return 0;
    }
    else{
        printf("Memory is successfully allocated.\n");
    }
    printf("Enter %d numbers by adding a gap for each numbers.\n",n);
    for(i=0;i<n;i++)
    {
        scanf("%d",&array[i]);
        sum+=array[i];
    }
    printf("The sum of all the element is %d.\n",sum);
    //Deallocating the memory
    free(array);
    printf("Memory is deleted successfully");
    return 0;
}

//calloc
#include <stdio.h>
#include <stdlib.h>
int main() {
    int n,i,*array,sum=0;
    //get length
    printf("Enter the number of elements:\n");
    scanf("%d",&n);
    //memory allocation
    array=(int *)calloc(n,sizeof(int));
    //validation
    if(array==NULL)
    {
        printf("Memory is not allocated.\n");
        return 0;
    }
    else{
        printf("Memory is successfully allocated.\n");
    }
    printf("Enter %d numbers by adding a gap for each numbers.\n",n);
    for(i=0;i<n;i++)
    {
        scanf("%d",&array[i]);
        sum+=array[i];
    }
    printf("The sum of all the element is %d.\n",sum);
    //Deallocating the memory
    free(array);
    printf("Memory is deleted successfully");
    return 0;
}

//realloc
#include <stdio.h>
#include <stdlib.h>
int main() {
    int n,nw,i,*array,sum=0;
    //get length
    printf("Enter the number of elements:\n");
    scanf("%d",&n);
    //memory allocation
    array=(int *)malloc(n*sizeof(int));
    //validation
    if(array==NULL)
    {
        printf("Memory is not allocated.\n");
        return 0;
    }
    else{
        printf("Memory is successfully allocated and the allocated memory is %d.\n",n);
    }
    printf("Enter %d numbers by adding a gap for each numbers.\n",n);
    for(i=0;i<n;i++)
    {
        scanf("%d",&array[i]);
        sum+=array[i];
    }
    printf("The sum of all the element is %d.\n",sum);
    //new allocation
    printf("Enter the new number of elements:\n");
    scanf("%d",&nw);
    //memory allocation
    array=(int *)realloc(array,nw*sizeof(int));
    //validation
    if(array==NULL)
    {
        printf("Memory is not allocated.\n");
        return 0;
    }
    else{
        printf("Memory is successfully allocated and the allocated memory is %d.\n",nw);
    }
    printf("Enter %d numbers by adding a gap for each numbers.\n",n);
    for(i=n;i<nw;i++)
    {
        scanf("%d",&array[i]);
        sum+=array[i];
    }
    printf("The sum of all the element is %d.\n",sum);
    //Deallocating the memory
    free(array);
    printf("Memory is deleted successfully");
    return 0;
}

//Student mark
#include <stdlib.h>
int main() {
   int sub;
   printf("Enter the number of the subjects:\n");
   scanf("%d",&sub);
   int *ad=(int *)malloc(sub*sizeof(int));
   if(ad==NULL)
    {
        printf("Memory is not allocated.\n");
        return 0;
    }
    else{
        printf("Memory is successfully allocated and the allocated memory is %d.\n",n);
    }
   printf("Enter the marks of the students:\n");
   for(int i=0;i<sub;i++)
   {
       scanf("%d",&ad[i]);
   }
   for(int i=0;i<sub;i++)
   {
       printf("Mark of the subject %d is %d.\n",i+1,ad[i]);
   }
   free(ad);
   printf("Memory is deleted successfully.");
   return 0;
}

//Emp ID
#include <stdio.h>
#include <stdlib.h>
int main() {
   int n,nw;
   printf("Enter the number of the employees:\n");
   scanf("%d",&n);
   int *empid=(int *)calloc(n,sizeof(int));
   if(empid==NULL)
    {
        printf("Memory is not allocated.\n");
        return 0;
    }
    else{
        printf("Memory is successfully allocated and the allocated memory is %d.\n",n);
    }
   for(int i=0;i<n;i++)
   {
       printf("Employee ID %d is %d.\n",i+1,empid[i]);
   }
   printf("Enter the employee ID of the employees:\n");
   for(int i=0;i<n;i++)
   {
       scanf("%d",&empid[i]);
   }
   for(int i=0;i<n;i++)
   {
       printf("Employee ID %d is %d.\n",i+1,empid[i]);
   }
   printf("Enter the number of the employees:\n");
   scanf("%d",&nw);
   empid=(int *)realloc(empid,nw*sizeof(int));
   if(empid==NULL)
    {
        printf("Memory is not allocated.\n");
        return 0;
    }
    else{
        printf("Memory is successfully allocated and the allocated memory is %d.\n",n);
    }
   printf("Enter the employee ID of the new employees:\n");
   for(int i=n;i<nw;i++)
   {
       scanf("%d",&empid[i]);
   }
   for(int i=0;i<nw;i++)
   {
       printf("Employee ID %d is %d.\n",i+1,empid[i]);
   }
   free(empid);
   printf("Memory is deleted successfully.");
   return 0;
}

//Pointer arithmetic
#include <stdio.h>
int main()
{
    int p[5]={1,2,3,4,5};
    int *n=p;
    printf("%d\n",*n);
    printf("%d\n",*(n+1));
    n++;
    printf("%d\n",*(n-1));
    n--;
    printf("%d\n",*(n+4));
    printf("%d\n",*(n+5));
    n+=3;
    printf("%d\n",*n);
    return 0;
}
