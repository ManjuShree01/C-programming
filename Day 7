//Student mark
#include <stdio.h>
struct student
{
    int roll;
    char name[10];
    int mark[5];
}s1;
int main() {
    printf("Enter the roll no.:\n");
    scanf("%d",&s1.roll);
    printf("Enter the name:\n");
    scanf("%s",s1.name);
    printf("Enter 5 subject marks:\n");
    for(int i=0;i<5;i++)
    {
        scanf("%d",&s1.mark[i]);
    }
    printf("\nRoll no. : %d",s1.roll);
    printf("\nName : %s",s1.name);
    for(int i=0;i<5;i++)
    {
        printf("\nSubject %d : %d",i+1,s1.mark[i]);
    }
    return 0;
}

//Employee details
#include <stdio.h>
struct employee
{
    int id;
    float salary;
}emp[3];
int main() {
    for(int i=0;i<3;i++)
    {
        printf("Enter the Employee ID %d :\n",i+1);
        scanf("%d",&emp[i].id);
        printf("Enter the salary:\n");
        scanf("%f",&emp[i].salary);
    }
    printf("\n-----------------Employee Details-----------------\n");
    for(int i=0;i<3;i++)
    {
        printf("Employee %d\nEmployee ID : %d\n",i+1,emp[i].id);
        printf("Salary : %.2f\n",emp[i].salary);
    }
    return 0;
}

//Recaharge 
#include <stdio.h>
struct recharge
{
    int num;
    float amnt;
}cus;
int main() {
    printf("Enter the Mobile No. :\n");
    scanf("%d",&cus.num);
    printf("Enter the recharge amount:\n");
    scanf("%f",&cus.amnt);
    printf("\n-----------------Recharge Details-----------------\n");
    printf("Mobile Number : %d\n",cus.num);
    printf("Recharge Amount : %.2f\n",cus.amnt);
    return 0;
}

//ptr
#include <stdio.h>
struct student
{
    char name[20];
    int regno;
};
int main() {
    // Write C code here
struct student std1={"arun",2};
struct student *point=&std1;
printf("%s\n",point->name);
printf("%p\n",point->name);
printf("%d\n",point->regno);
printf("%p\n",point->regno);
    return 0;
}

//Address management
#include <stdio.h>
struct address
{
    char city[20];
    int pincode;
}a={"Greece",12345};
struct student
{
    int id;
    char name[10];
    struct address ad;
};
int main() {
    struct student s1={1,"Ram",a};
    struct student  *p=&s1;
    printf("Student Name : %s\nID : %d\nAddress : %s\n%d",p->name,p->id,p->ad.city,p->ad.pincode);
    return 0;
}

//Employee details
#include <stdio.h>
struct dept
{
    char dptname[10];
    int dptid;
};
struct employee
{
    int empid;
    char empname[10];
    struct dept dp;
};
int main() {
    struct dept d={"ECE",101};
    struct employee emp={10,"Ram",d};
    struct employee *p=&emp;
    printf("Employee ID:%d\nEmployee name: %d\nDept name: %s\nDept ID: %d\n",p->empid,p->empname,p->dp.dptname,p->dp.dptid);
    return 0;
}

//Product and supplier
#include <stdio.h>
#include <string.h>
#include <stdlib.h>
struct supplier
{
    char supname[10];
    char loc[10];
};
struct product
{
    int id;
    char name[10];
    int price;
    struct supplier sp;
};
int main() {
    struct supplier s={"Ram","Chennai"};
    struct product pr={101,"Pen",10,s};
    struct product *p=(struct product*)malloc(sizeof(struct product));
    if(p==NULL)
    {
        printf("Memory is not allocated.");
        return 1;
    }
    *p=pr;
    printf("Product ID:%d\nProduct name: %d\nPrice: %d\nSupplier name: %s\nSupplier location: %s\n",p->id,p->name,p->price,p->sp.supname,p->sp.loc);
    free(p);
    return 0;
}
