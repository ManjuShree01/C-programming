//Age
#include <stdio.h>
int main()
{
    int n,sum=0;
    float avg;
    printf("Enter the no. of persons:\n");
    scanf("%d",&n);
    int age[n];
    printf("Enter the age:\n");
    for(int i=0;i<n;i++)
    {
        scanf("%d",&age[i]);
        sum+=age[i];
    }
    avg=sum/n;
    int small=age[0],big=age[0];
    for(int i=0;i<n;i++)
    {
        if(age[i]>big)
        {
            big=age[i];
        }
    }
     for(int i=0;i<n;i++)
    {
        if(age[i]<small)
        {
            small=age[i];
        }
    }
    printf("The average age is %.2f.\n",avg);
    printf("The smallest number is %d.\n",small);
    printf("The largest number is %d.",big);
    return 0;
}
